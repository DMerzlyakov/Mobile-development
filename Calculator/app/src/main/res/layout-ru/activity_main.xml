<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/expression"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Space
                android:layout_width="28dp"
                android:layout_height="93dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/field_expression"
                style="@style/expression"
                android:hint="Выражение" />

        </LinearLayout>

        <LinearLayout
            style="@style/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Space
                style="@style/result"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/field_res"
                style="@style/result"
                android:hint="Ответ" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_c"
                style="@style/operations"
                android:text="C" />

            <TextView
                android:id="@+id/bt_open"
                style="@style/operations"
                android:text="(" />

            <TextView
                android:id="@+id/bt_close"
                style="@style/operations"
                android:text=")" />

            <TextView
                android:id="@+id/bt_divide"
                style="@style/operations"
                android:text="/" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_7"
                style="@style/myStyle"
                android:text="7" />

            <TextView
                android:id="@+id/bt_8"
                style="@style/myStyle"
                android:text="8" />

            <TextView
                android:id="@+id/bt_9"
                style="@style/myStyle"
                android:text="9" />

            <TextView
                android:id="@+id/bt_mult"
                style="@style/operations"
                android:text="*"
                android:textSize="8sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_4"
                style="@style/myStyle"
                android:text="4" />

            <TextView
                android:id="@+id/bt_5"
                style="@style/myStyle"
                android:text="5" />

            <TextView
                android:id="@+id/bt_6"
                style="@style/myStyle"
                android:text="6" />

            <TextView
                android:id="@+id/bt_minus"
                style="@style/operations"
                android:text="-" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_1"
                style="@style/myStyle"
                android:text="1" />

            <TextView
                android:id="@+id/bt_2"
                style="@style/myStyle"
                android:text="2" />

            <TextView
                android:id="@+id/bt_3"
                style="@style/myStyle"
                android:text="3" />

            <TextView
                android:id="@+id/bt_sum"
                style="@style/operations"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_dot"
                style="@style/myStyle"
                android:text="." />

            <TextView
                android:id="@+id/bt_0"
                style="@style/myStyle"
                android:text="0" />

            <TextView
                android:id="@+id/bt_back"
                style="@style/myStyle"
                android:text="Назад" />

            <TextView
                android:id="@+id/bt_eq"
                style="@style/operations"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>